---
import Container from "./Container.astro";
---

<div class="relative pt-16 md:py-16" id="cta">
  <div
    aria-hidden="true"
    class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
  >
    <div
      class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"
    >
    </div>
    <div
      class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
    >
    </div>
  </div>
  <Container>
    <div class="relative">
      <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
        <h1
          class="text-center text-3xl font-bold text-gray-800 dark:text-white md:text-5xl mb-16 md:mb-0"
        >
          Schedule a Meeting
        </h1>

        <div class="w-full mt-10">
          <!-- Calendly inline widget begin -->
          <div
            class="calendly-inline-widget"
            data-url="https://calendly.com/stan-visuals01/30min"
            style="min-width:320px;height:900px;
            @media (max-width: 600px) { min-width: 100%; height: 600px; }"
          >
          </div>
          <script
            type="text/javascript"
            src="https://assets.calendly.com/assets/external/widget.js"
            async
          ></script>
          <!-- Calendly inline widget end -->
        </div>
      </div>
    </div>
  </Container>
</div>

<style>
  .calendly-inline-widget {
    display: block;
    margin: auto;
  }

  @media (max-width: 600px) {
    .calendly-inline-widget {
      min-width: 100%;
      height: 600px; /* Adjust the height for smaller screens */
    }
  }

  @media (min-width: 601px) and (max-width: 1200px) {
    .calendly-inline-widget {
      min-width: 80%; /* Adjust the width for medium screens */
      height: 800px; /* Adjust the height for medium screens */
    }
  }

  /* Add more media queries as needed */
</style>
